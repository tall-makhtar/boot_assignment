<h1>Update this blog</h1>
<%= form_with(model: @boot_app, local: true) do |form| %>

    <div class="function_name">
         <%= form.label :name %>
         <%= form.text_field :name %>
    </div>
    <div class="function_name">
        <%= form.label :email %>
        <%= form.text_field :email %>
    </div>
    <div class="function_name">
        <%= form.label :content %>
        <%= form.text_field :content %>
    </div>
    <%= form.submit %>
    
<% end %>